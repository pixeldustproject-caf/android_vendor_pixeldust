<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:id="@id/song_row_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@id/song_row_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/TrackTitle" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14.0sp"
            android:textColor="#ffdddddd"
            android:id="@id/song_row_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            style="@style/TrackSubtitle" />

        <TextView
            android:id="@id/song_row_separator"
            android:padding="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢"
            android:importantForAccessibility="no"
            style="@style/TrackSubtitle" />

        <TextView
            android:id="@id/song_row_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TrackSubtitle" />

    </LinearLayout>

    <TextView
        android:id="@id/song_row_context"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TrackSubtitle" />

</LinearLayout>
